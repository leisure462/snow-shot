{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"identifier": "com.chao.snowshot",
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVGODlCOTdFOUU2RjZDMQpSV1RCOXVicGw1djRCZE4waUVoR2lCU2xxYWlvMUhDUTFTR2VXZmFyWmVZMXBxRy9vV1BHQXBBdwo=",
			"endpoints": [
				"https://github.com/mg-chao/snow-shot/releases/latest/download/latest.json"
			],
			"windows": {
				"installMode": "passive"
			}
		}
	},
	"bundle": {
		"createUpdaterArtifacts": false,
		"active": true,
		"category": "Utility",
		"shortDescription": "Snow Shot",
		"longDescription": "Simple and elegant screenshot tool",
		"macOS": {
			"minimumSystemVersion": "12.3.0"
		},
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"webviewInstallMode": {
				"silent": true,
				"type": "embedBootstrapper"
			},
			"nsis": {
				"template": "./build-configs/installer.nsi",
				"displayLanguageSelector": true,
				"installerIcon": "icons/icon.ico",
				"installMode": "perMachine",
				"languages": [
					"SimpChinese",
					"TradChinese",
					"English"
				]
			}
		},
		"licenseFile": "../LICENSE-Commercial",
		"targets": [
			"nsis"
		],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": {
			"app-icons/": "app-icons/"
		}
	}
}